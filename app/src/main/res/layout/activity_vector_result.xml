<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VectorResult"
    android:orientation="vertical"
    android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="피부 체크 결과 \n2가지의 이상징후가 있어요!"
            android:fontFamily="@font/nanumsquareeb"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:background="@drawable/text_item"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:fontFamily="@font/nanumsquareeb"
                            android:text="몽이의 눈은 꼼꼼한 관리가 필요해요!"
                            android:textColor="@color/white"
                            android:textFontWeight="700"
                            android:textSize="15dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="체크관리일:2023.01.29"
                            android:textColor="@color/white"
                            android:textFontWeight="700"
                            android:textSize="12dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/text_item2"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="증상결과에 표시된 %수치는 AI 분석을 통한 \n증상이 있을 확률로 아래와 같이 구분해 제공하고 있습니다."
                            android:textSize="14dp"
                            android:textColor="#8E8E8F"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                                <ProgressBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:background="@color/blue"/>
                                <ProgressBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.4"
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:background="@color/yellow"/>
                                <ProgressBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:background="@color/pink"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0%"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text="50%"
                                    android:gravity="right"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.4"
                                    android:text="85%"
                                    android:gravity="right"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:text="100%"
                                    android:gravity="right"/>
                        </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_item2"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/vectorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="각막 손상"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="15dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                                <ImageView
                                    android:scaleType="centerCrop"
                                    android:id="@+id/resultImg"
                                    android:layout_width="105dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/round_background_color"
                                    android:src="@drawable/r" />

                                <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:rotation="270"
                            android:progress="0"
                            android:max="100"
                            android:progressBackgroundTint="#5A5A5A"/>
                        </LinearLayout>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0.3dp"
                            android:background="#595959"
                            android:layout_marginTop="10dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="진단 내용"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="내용~"
                            android:textSize="12dp"
                            android:textColor="@color/black"/>

                </LinearLayout>

        <Button
            android:id="@+id/storeVector"
            android:text="진단 결과 저장"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/gray"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <ImageButton
            android:id="@+id/goBooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:src="@drawable/gobooks"
            android:layout_marginLeft="17dp"/>

</LinearLayout>
</ScrollView>